@model IEnumerable<LittleStore.Models.Image>

@{
    ViewBag.Title = "EditImages";
}

<h2>EditImages</h2>

<p>
    @Html.ActionLink("Add New", "AddImage", new {Imageid = Model.First().ProductId})
</p>
<table>
    <tr>
        <th>
            Image
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImagePath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src=@item.ImagePath width="200" height="155" alt="lorem">
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImagePath)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductId)
        </td>
        <td>
            @Html.ActionLink("Delete", "DeleteImage", new {imageid = item.ImageId, productId = item.ProductId})
        </td>
    </tr>
}

</table>
