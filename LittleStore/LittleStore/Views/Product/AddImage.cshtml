@model LittleStore.Models.viewModel.AddImageViewModel

@{
    ViewBag.Title = "AddImage";
}

<h2>AddImage</h2>

@using (Html.BeginForm("AddImage", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>AddImageViewModel</legend>
        <div>
            <input id="productId" name="productId" value="@Model.productId" />
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.ImageUpload, new { type = "file" })
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to ProductDetails", "ProductDetails", new {id = Model.productId})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
